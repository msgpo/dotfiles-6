# vim: ft=sshconfig:

ControlMaster auto
ControlPath /tmp/ssh-%r@%h:%p
Protocol 2

# FR Dev
Host 172.32.*
  User ec2-user
  ProxyCommand ssh ubuntu@bastion.frontrowdev.com -W %h:%p
  ForwardAgent yes

# FR Prod
Host 10.*
  User ec2-user
  ProxyCommand ssh ubuntu@bastion.frontrowed.com -W %h:%p
  ForwardAgent yes

Host github.com
  # GitHub now blows up on the more secure configuration. Super.
  #
  #   debug1: expecting SSH2_MSG_KEX_ECDH_REPLY
  #   Connection closed by 192.30.253.113 port 22
  #   fatal: Could not read from remote repository.
  #
  MACs hmac-sha1,hmac-md5

Host *
  # https://stribika.github.io/2015/01/04/secure-secure-shell.html
  Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
  KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
  MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com,umac-128@openssh.com

  ServerAliveCountMax 5
  ServerAliveInterval 120
